# Platform-agnostic pnpm workspace configuration for Expo SDK 52
# Optimized for EAS builds and monorepo dependency resolution

# CRITICAL: Workspace dependency hoisting for @babel/runtime resolution
node-linker=hoisted
shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true

# EAS build compatibility
prefer-offline=false
registry=https://registry.npmjs.org/

# Performance optimizations
cache-max=86400000

# Disable unnecessary features for build performance
audit=false
fund=false
