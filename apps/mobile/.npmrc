# Coinbase-Style Hermetic Build Configuration
# Ensures deterministic, reproducible builds for production

# Registry Configuration
registry=https://registry.npmjs.org/

# Exact Install (No Range Resolution)
save-exact=true

# Disable Optional Dependencies (Hermetic Builds)
optional=false

# Disable Package Lock (Use Exact Versions)
package-lock=false

# Disable Audit (Build Performance)
audit=false

# Disable Fund Messages (Clean Build Output)
fund=false

# Cache Configuration for Build Performance
cache-max=86400000
prefer-offline=true

# Security Configuration
ignore-scripts=false

# Build Environment Specific
production=true
